{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Nodemon Debug",
      "runtimeExecutable": "nodemon",
      "args": ["${workspaceFolder}/src/main.ts"],
      "sourceMaps": true,
